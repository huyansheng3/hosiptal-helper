/* pages/map.wxss */

page {
  height: 100%;
}

.map-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.map-container__control {
  position: fixed;
  right: 20rpx;
  bottom: 150rpx;
}

.map-container__control .mccontrol__image {
  height: 60rpx;
  width: 60rpx;
  display: block;
}

.mccontrol__plus {
  margin-top: 10rpx;
}

.map-container__map {
  width: 100%;
  height: 100%;
}

.map-container__checkbox {
  position: absolute;
  left: 0;
  bottom: 20rpx;
}
